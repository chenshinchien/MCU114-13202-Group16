<?xml version="1.0" encoding="utf-8"?>
<!-- 根佈局: FrameLayout 用於堆疊背景與內容 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainMenuActivity">

    <!-- 背景圖層 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/menu_background"
        android:scaleType="centerCrop"
        android:contentDescription="@string/desc_main_menu_background" />

    <!-- 內容滾動視圖 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 歡迎標語 -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                tools:text="歡迎：Paul" />

            <!-- 功能按鈕區塊 -->
            <Button
                android:id="@+id/btnVocabBrowse"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:paddingVertical="12dp"
                android:text="單字瀏覽"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:backgroundTint="#B3FFFFFF" />

            <Button
                android:id="@+id/btnQuizUnit1"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:paddingVertical="12dp"
                android:text="開始測驗 - 單元 1"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:backgroundTint="#B3FFFFFF" />

            <Button
                android:id="@+id/btnQuizUnit2"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:paddingVertical="12dp"
                android:text="開始測驗 - 單元 2"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:backgroundTint="#B3FFFFFF" />

            <Button
                android:id="@+id/btnQuizAll"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:paddingVertical="12dp"
                android:text="開始測驗 - 全部單元"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:backgroundTint="#B3FFFFFF" />

            <Button
                android:id="@+id/btnRecords"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:paddingVertical="12dp"
                android:text="個人紀錄"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:backgroundTint="#B3FFFFFF" />

            <Button
                android:id="@+id/btnFeedback"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:paddingVertical="12dp"
                android:text="回饋"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:backgroundTint="#B3FFFFFF" />

            <!-- 登出按鈕 -->
            <Button
                android:id="@+id/btnLogout"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="12dp"
                android:text="登出"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:backgroundTint="#44000000"
                app:cornerRadius="16dp"
                app:strokeColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
