<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 項目被按下時的狀態 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- 按下時的灰色背景 -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- 預設狀態 (未被按下) -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- 預設的白色背景 -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#DDDDDD" /> <!-- 加上一個細邊框 -->
        </shape>
    </item>
</selector>
    